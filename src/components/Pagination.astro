---
import Link from "./Link.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
  {
    prevUrl && (
      <Link
        text="Anterior"
        href={prevUrl}
        icon={{
          name: "ph:arrow-left",
          side: "left",
          width: "16",
        }}
        aria-label="Previous Page"
        classes="w-full flex justify-center text-zinc-50 text-base gap-2"
      />
    )
  }
  {
    nextUrl && (
      <Link
        text="PrÃ³xima"
        href={nextUrl}
        icon={{
          name: "ph:arrow-right",
          side: "right",
          width: "16",
        }}
        aria-label="Next Page"
        classes="w-full flex  justify-center text-zinc-50 text-base gap-2"
      />
    )
  }
</nav>
