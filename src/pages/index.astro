---
import Contact from "@components/Contact.astro";
import { Particles } from "@components/Particles";
import Link from "@components/Link.astro";

import Layout from "@layouts/Layout.astro";

import navData from "../data/navData";
import { fade } from "astro/dist/transitions"
---

<Layout
  title="Rafael Feitosa | Home"
  description="PortfÃ³lio com os projetos de Rafael Feitosa - Desenvolvedor front-end"
>
  <Particles client:idle />

  <div
    class="h-screen w-full flex flex-col justify-center items-center select-none animate-appear"
  >
    <ul>
      <li class="flex gap-5 mb-5 text-sm">
        {
          navData.map((item) => (
            <Link
              href={item.href}
              text={item.name}
              classes="duration-500 ease-in-out text-zinc-400 hover:text-zinc-200"
              rel="prefetch"
            />
          ))
        }
      </li>
    </ul>

    <div class="flex flex-col text-center gap-2">
      <h1
        class="text-5xl lg:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-zinc-300 via-zinc-400 to-zinc-600"
      >
        Rafael Feitosa
      </h1>
      <h2 class="text-lg lg:text-1xl font-bold text-zinc-400 opacity-90">
        Desenvolvedor Front-End
      </h2>
    </div>

    <Contact />
  </div>
</Layout>
