---
import Contact from '../components/Contact.astro'
import { ParticlesComponent } from '../components/ParticlesComponent';
import Layout from '../layouts/Layout.astro';

import navData from '../data/navData'
import Link from '../components/Link.astro'

---

<Layout title="Rafael Feitosa | Home">
	<ParticlesComponent client:visible />

	<div class="h-screen w-screen flex flex-col justify-center items-center">
		<ul>
			<li class="flex gap-3 mb-5 text-sm">
				{
					navData.map((item) => (
						<Link 
							href={item.href} 
							text={item.name} 
							classes="duration-500 ease-in-out text-zinc-500 hover:text-zinc-200"
						/>
					))
				}
			</li>
		</ul>

		<h1
			class="text-center text-5xl lg:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-zinc-200 via-zinc-300 to-zinc-500"
		>
			Rafael Feitosa
		</h1>
		<h2 class="text-xl lg:text-2xl font-bold text-zinc-200 opacity-90">
			Desenvolvedor Front-End
		</h2>

		<Contact/>

	</div>
</Layout>
